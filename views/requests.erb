<h1><img src="https://github.com/hjdalton/makersbnb/blob/main/logo/icon_small.png?raw=true" alt="icon" height="40", width="40"> Requests</h1>

<h2>Requests made</h2>
<ul>
  <% @made.each do |request_made| %>
    <li class="request" id="request-<%= request_made.id %>">
    <a href="spaces/listing/<%= request_made.space_id %>"><p><%= request_made.space_name %></p></a>
    <p> <%=request_made.start_date%> <%=request_made.end_date%> </p>
    <p> Status: <%= request_made.status %> </p>
  <% end %>
</ul>

<h2>Requests received</h2>
<ul>
  <% @received.each do |request_received| %>
    <li class="request" id="request-<%= request_received.id %>">
    <a href="spaces/requested/<%= request_received.space_id %>"><p><%= request_received.space_name %></p></a>
    <p> <%=request_received.start_date%> <%=request_received.end_date%> </p>
    <p> Status: <%= request_received.status %> </p>
  <% end %>  
</ul>

<br><br>
<form>
<input type="button" value="Back" onclick="history.back()">
</form>



<div class="footer">
<img src="https://github.com/hjdalton/makersbnb/blob/main/logo/logo_large.png?raw=true" alt="icon" height="30", width="180">
  <p>Wherever you stay make sure it feels like home</p>
</div>

